<div class='events-header' style='background-image: url(<%= header_background_image_url %>)'>
  <div class="container">
    <h2> Discover upcoming events </h2>
    <form action="/find_events" method="GET">
      <div class="input-group">
        <input type="text" class="form-control" name="search_term" placeholder="Search for events, shows, courses...">
        <span class="input-group-btn">
          <button class="btn btn-secondary search" type="submit">Go</button>
        </span>
      </div>
    </form>
  </div>
</div>
<div class="container-fluid events-list">
    <% @events.in_groups_of(3) do |g| %>
      <div class="row">
        <% g.compact.each do |e| %>
            <%= render partial: 'card', locals: {event: e} %>
        <% end %>
      </div>  
    <% end %>
  </div>
</div>